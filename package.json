{
  "name": "lcv",
  "version": "0.0.1",
  "description": "Browse and listen to LCV Choir recordings",
  "author": "Martin Laine <martin.laine@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd app && yarn install",
    "package": "bin/build && electron-packager app --out dist --overwrite --asar",
    "start": "foreman s",
    "build": "bin/build",
    "test": "snazzy 'src/**/*.{js,jsx}'"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chokidar": "^1.6.1",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "node-sass": "^4.3.0",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0"
  },
  "babel": {
    "presets": [
      "react"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
