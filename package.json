{
  "name": "lcv-song-book",
  "version": "1.0.0",
  "description": "A desktop app to view LCV Choir recordings and sheet music",
  "author": "Martin Laine <martin.laine@gmail.com>",
  "repository": "https://github.com/doryphores/lcv-choir-resources",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd app && yarn install",
    "package": "bin/build && electron-packager app --out dist --overwrite --asar --icon ./app/static/icon.icns",
    "start": "foreman s",
    "build": "bin/build",
    "test": "standard 'src/**/*.{js,jsx}' | snazzy"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.10",
    "electron-packager": "^8.7.0",
    "node-sass": "^4.5.3",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "babel": {
    "presets": [
      "react"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
