{
  "name": "lcv-choir-resources",
  "version": "0.0.1",
  "description": "A desktop app to view LCV Choir recordings and sheet music",
  "author": "Martin Laine <martin.laine@gmail.com>",
  "repository": "https://github.com/doryphores/lcv-choir-resources",
  "license": "MIT",
  "scripts": {
    "postinstall": "cd app && yarn install",
    "package": "bin/build && electron-packager app --out dist --overwrite --asar --icon ./app/static/icon.icns",
    "start": "foreman s",
    "build": "bin/build",
    "test": "snazzy 'src/**/*.{js,jsx}'"
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-preset-react": "^6.23.0",
    "chokidar": "^1.6.1",
    "electron": "^1.4.15",
    "electron-packager": "^8.5.1",
    "node-sass": "^4.5.0",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0"
  },
  "babel": {
    "presets": [
      "react"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
