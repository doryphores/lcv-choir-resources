{
  "name": "lcv-song-book",
  "productName": "LCV Song Book",
  "description": "London City Voices Choir Song Book",
  "version": "1.0.1",
  "author": "Martin Laine <martin.laine@gmail.com>",
  "repository": "https://github.com/doryphores/lcv-choir-resources",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint:ts": "tslint -p .",
    "test": "npm run lint:ts"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "src/static/icon.icns"
      },
      "electronWinstallerConfig": {
        "name": "lcv-song-book"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "lcv2"
      }
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "electron-compile": "^6.4.2",
    "electron-devtools-installer": "^2.1.0",
    "emerge": "^0.4",
    "format-duration": "^1.0.0",
    "fs-extra": "^7.0",
    "howler": "^2.0.15",
    "lodash": "^4.17.10",
    "pdfjs-dist": "^2.0.332",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-redux": "^5.0.6",
    "react-transition-group": "^2.2.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.83.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/format-duration": "^1.0.0",
    "@types/fs-extra": "^5.0.4",
    "@types/howler": "^2.0.5",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.9",
    "@types/react-transition-group": "^2.0.14",
    "@types/request": "^2.47.1",
    "electron": "2.0.7",
    "electron-forge": "^5.2.2",
    "electron-packager": "^12.1.0",
    "electron-prebuilt-compile": "2.0.7",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.0.1"
  }
